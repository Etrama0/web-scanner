# App Configuration
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0
APP_SECRET_KEY=change_this_in_production

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
SSL_VERIFY=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_INTERVAL=60

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scanner_db
DB_USER=db_user
DB_PASSWORD=change_this_in_production

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/scanner/app.log

# API Settings
API_VERSION=v1
API_TIMEOUT=30
MAX_RETRIES=3

# Scanner Configuration
SCAN_THREADS=10
SCAN_TIMEOUT=300
USER_AGENT=SecurityScanner/1.0

# Report Generation
REPORT_FORMAT=html,json
REPORT_PATH=/var/reports

# External Services
VULNERABILITY_DB_API_KEY=your_api_key_here
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Test Configuration
TEST_USERNAME=test_user
TEST_PASSWORD=test_pass
TEST_SERVER_URL=http://testserver
TEST_SERVER_PORT=8080
TEST_RATE_LIMIT=5
TEST_SCAN_TIMEOUT=10

# Security Test Settings
MIN_CONFIDENCE_SCORE=0.7
MAX_FALSE_POSITIVES=5
RESULT_DEDUPLICATION=true
MAX_URLS_PER_DOMAIN=100
MAX_TEST_DURATION=300
SKIP_SIMILAR_ENDPOINTS=true

# Module Settings
BRUTE_FORCE_MAX_ATTEMPTS=100
RECON_PORT_SCAN=true
EXPLOIT_TYPE=rce
